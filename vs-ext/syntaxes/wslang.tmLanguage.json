{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Well.. Simple",
  "scopeName": "source.wslang",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.wslang",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.wslang",
          "match": "\\b(if|else|while|for|in|range|end|break|return|try|except|finally|def|class|import)\\b"
        },
        {
          "name": "keyword.operator.logical.wslang",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "constant.language.boolean.wslang",
          "match": "\\b(true|false|null)\\b"
        },
        {
          "name": "storage.type.function.wslang",
          "match": "\\b(def)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.wslang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.wslang",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.wslang",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.wslang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.wslang",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.wslang",
          "match": "\\+\\=|\\-\\=|\\+|\\-|\\*|\\/|\\%"
        },
        {
          "name": "keyword.operator.comparison.wslang",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.wslang",
          "match": "="
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.wslang",
          "match": "\\b(print|input|len|type|str|int|float|list|dict|encode|decode|hash|sleep|version|command|readFile|writeFile|append|length|concat|split)\\b(?=\\()"
        },
        {
          "name": "support.function.builtin.wslang",
          "match": "\\b(pkg\\.install|pkg\\.list|pkg\\.remove|os\\.command|subprocess\\.run|subprocess\\.start|json\\.parse|json\\.stringify|hash\\.md5|hash\\.sha256|encode\\.base64|decode\\.base64)\\b"
        },
        {
          "name": "support.function.canvas.wslang",
          "match": "\\b(canvas\\.clear|canvas\\.render|canvas\\.drawCircle|canvas\\.drawRectangle|canvas\\.drawTriangle|canvas\\.drawLine|canvas\\.drawPolygon|canvas\\.exportSVG)\\b"
        },
        {
          "name": "support.function.gui.wslang",
          "match": "\\b(gui\\.window|gui\\.button|gui\\.label|gui\\.input|gui\\.show|gui\\.close)\\b"
        },
        {
          "name": "support.function.string.wslang",
          "match": "\\.\\b(length|letter|upper|lower|split|join|replace)\\b(?=\\()"
        },
        {
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.wslang" }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.wslang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
